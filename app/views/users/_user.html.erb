<% unless current_user == user %>  
  <li>
    <%= user.name %> - <%= user.email %> 
    <% if current_user.friends_with?(user) %>
      / Friend
    <% elsif current_user.pending_request?(user) %>
      / Evaluating your request
    <% else %>
      / <%= link_to 'Send friend request',
          friendship_requests_path(request: { from_id: current_user, to_id: user }),
                                    method: 'post' %>
    <% end %>
  </li>
<% end %>
